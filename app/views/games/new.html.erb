<h1>Welcome to the Longest Word Game</h1>


<ul >
  <% @letters.each do |letter| %>
    <li style="display: inline; padding: 0.5rem; background-color: blue; color: white; font-family: monospace; font-size: 2rem;"><%= letter %></li>
  <% end %>
</ul>


<form action="/score" method="post">
  <input type="text" name="guess" placeholder="Enter your guess">
  <input type="submit" value="Guess!">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>